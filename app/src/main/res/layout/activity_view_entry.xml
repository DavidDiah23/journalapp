<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Entry Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- View Mode Title -->
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entry Title"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_blue"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginBottom="8dp" />

                    <!-- Edit Mode Title -->
                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entry Title"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_orange"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday, March 15, 2024"
                        android:textSize="14sp"
                        android:textColor="@color/text_purple"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Š Happy"
                    android:textSize="24sp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Category Chip -->
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="12sp"
                android:textColor="@color/accent_color"
                android:background="@drawable/category_chip_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginBottom="24dp" />

            <!-- View Mode Content -->
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is where the journal entry content will be displayed. It can be a long text that spans multiple lines and paragraphs."
                android:textSize="16sp"
                android:textColor="@color/text_green"
                android:lineSpacingMultiplier="1.4"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />

            <!-- Edit Mode Content -->
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is where the journal entry content will be displayed. It can be a long text that spans multiple lines and paragraphs."
                android:textSize="16sp"
                android:textColor="@color/text_red"
                android:lineSpacingMultiplier="1.4"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01"
                android:background="@null"
                android:gravity="top"
                android:minHeight="200dp"
                android:visibility="gone" />

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
